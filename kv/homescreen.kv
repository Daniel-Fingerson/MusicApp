#:import utils kivy.utils


<HomeScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#39b3f2")
            Rectangle:
                size: self.size
                pos: self.pos

		GridLayout:
			#Puts two weather icons 
			rows: 1
			pos_hint: {"top": 1, "left": 1}
			#below is width by height; 1 = fullscreen (same with others)
			#.1 = tenth of screen
			size_hint: 1, .1 
			Image:
				source: "Icons/pentagram.png"
			Image:
				source: "Icons/pentagram.png"


		GridLayout:
			#Puts two weather icons and avatar icon
			rows: 1
			pos_hint: {"top": 1, "left": 1}
			size_hint: 1, .2 
			Image:
				source: "Icons/pentagram.png"
			Image:
				source: "Icons/equalizer.png"
			Image:
				source: "Icons/pentagram.png"



		Label:
			#Streak label
			pos_hint: {"top": .7, "left": 1}
			size_hint: 1, .1 
			text: "Hello Tyler and Jack! \nah geez thats not proper alphabetical order "
			id: example_text


		GridLayout:
		#Adds 2 music images 

			cols: 4
			pos_hint: {"top": .2, "left": 1}
			size_hint: 1, .2

			Image:
				source: "Icons/quarter.png"
			Image:
				source: "Icons/juntosSame.png"
			Image:
				source: "Icons/half.png"
			Image:
				source: "Icons/whole.png"





		GridLayout:
		#Adds 2 music images 

			cols: 2
			pos_hint: {"top": .2, "left": 1}
			size_hint: 1, .2

			Image:
				source: "Icons/parallel.png"
			Image:
				source: "Icons/parallel.png"
